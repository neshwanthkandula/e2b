FROM node:20-alpine

# Install basic tools
RUN apk add --no-cache \
    bash \
    git \
    curl \
    vim \
    sudo \
    python3 \
    make \
    g++ \
    openssh-client

# Enable corepack (built into Node 20)
RUN corepack enable && \
    corepack prepare yarn@stable --activate && \
    corepack prepare pnpm@latest --activate

# Install global Node scaffolding tools
RUN npm install -g \
    create-vite@latest \
    create-react-app@latest \
    create-next-app@latest \
    @angular/cli@latest \
    @vue/cli@latest

WORKDIR /workspace

CMD ["bash"]
